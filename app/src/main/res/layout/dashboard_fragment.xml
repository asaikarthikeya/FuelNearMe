<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dashboard_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="App to find fuel" />

        <Button
            android:id="@+id/dashboard_cng_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dashboard_heading"
            android:layout_alignLeft="@id/dashboard_heading"
            android:text="CNG"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="298dp" />

        <Button
            android:id="@+id/dashboard_autolpg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dashboard_cng_button"
            android:text="Auto LPG"
            android:layout_alignLeft="@id/dashboard_heading"
            tools:layout_editor_absoluteX="121dp"
            tools:layout_editor_absoluteY="377dp" />

        <Button
            android:id="@+id/dashboard_pertrolanddesiel_button"
            android:layout_width="wrap_content"
            android:layout_below="@id/dashboard_autolpg_button"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/dashboard_heading"
            android:text="Fuel"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="478dp" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>